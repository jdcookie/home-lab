# Immich Environment Configuration
# Generated by Ansible

TZ={{ timezone }}
DB_PASSWORD={{ immich_db_password }}
UPLOAD_LOCATION={{ immich_upload_path | default('/opt/immich/upload') }}

# OAuth Configuration (configure after Authentik setup)
OAUTH_ENABLED={{ immich_oauth_enabled | default('false') }}
{% if immich_oauth_enabled | default(false) %}
OAUTH_ISSUER_URL=https://{{ authentik_url }}/application/o/immich/
OAUTH_CLIENT_ID={{ immich_oauth_client_id }}
OAUTH_CLIENT_SECRET={{ immich_oauth_client_secret }}
{% endif %}
