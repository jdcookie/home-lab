# ===========================================
# SATISFACTORY SERVER CONFIGURATION
# ===========================================
# Copy this file to .env and customize as needed
# SECURITY: Never commit .env to git

# -------------------------------------------
# GENERAL SETTINGS
# -------------------------------------------
TZ=America/New_York
PUID=1000
PGID=1000

# -------------------------------------------
# SATISFACTORY SERVER CONFIGURATION
# -------------------------------------------
# Maximum players (default: 4)
MAXPLAYERS=4

# Server query port
SERVERQUERYPORT=15777

# Beacon port
BEACONPORT=15000

# Game port
GAMEPORT=7777

# Auto-pause when no players connected (saves resources)
AUTOPAUSE=true

# Auto-save interval in seconds (300 = 5 minutes)
AUTOSAVEINTERVAL=300

# Crash reporting
CRASHREPORT=false

# Skip update check on start (faster startup)
SKIPUPDATE=false

# Steam Beta branch (leave empty for stable)
STEAMBETA=

# -------------------------------------------
# PATHS
# -------------------------------------------
# Where game data is stored (NFS mount from TrueNAS)
SATISFACTORY_DATA_PATH=/mnt/games/satisfactory
