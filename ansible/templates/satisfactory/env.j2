# ===========================================
# SATISFACTORY SERVER CONFIGURATION
# ===========================================
# Generated by Ansible - Do not edit manually
# SECURITY: This file contains no secrets but should not be committed

# -------------------------------------------
# GENERAL SETTINGS
# -------------------------------------------
TZ={{ timezone }}
PUID={{ satisfactory_puid | default('1000') }}
PGID={{ satisfactory_pgid | default('1000') }}

# -------------------------------------------
# SATISFACTORY SERVER CONFIGURATION
# -------------------------------------------
# Maximum players (default: 4)
MAXPLAYERS={{ satisfactory_max_players | default('4') }}

# Server query port
SERVERQUERYPORT={{ satisfactory_query_port | default('15777') }}

# Beacon port
BEACONPORT={{ satisfactory_beacon_port | default('15000') }}

# Game port
GAMEPORT={{ satisfactory_game_port | default('7777') }}

# Auto-pause when no players connected (saves resources)
AUTOPAUSE={{ satisfactory_autopause | default('true') }}

# Auto-save interval in seconds (300 = 5 minutes)
AUTOSAVEINTERVAL={{ satisfactory_autosave_interval | default('300') }}

# Crash reporting
CRASHREPORT={{ satisfactory_crash_report | default('false') }}

# Skip update check on start (faster startup)
SKIPUPDATE={{ satisfactory_skip_update | default('false') }}

# Steam Beta branch (leave empty for stable)
STEAMBETA={{ satisfactory_steam_beta | default('') }}

# -------------------------------------------
# PATHS
# -------------------------------------------
# Where game data is stored (NFS mount from TrueNAS)
SATISFACTORY_DATA_PATH={{ satisfactory_data_path | default('/mnt/games/satisfactory') }}
